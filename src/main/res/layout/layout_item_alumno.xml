<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_blue_100"
    android:orientation="horizontal"
    android:padding="@dimen/dim_10dp">



    <TextView

        android:id="@+id/txtIdAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dim_10dp"
        android:gravity="center|start"
        android:maxLines="1"
        android:text="id"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dim_10dp"
        android:layout_weight="1"
        android:gravity="center|start"
        android:maxLines="2"
        android:text="Hola Mundo"
        android:textSize="11dp" />

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="@dimen/dimen.layout.item.alumno.imageview"
        android:layout_height="@dimen/dimen.layout.item.alumno.imageview"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_account_circle"
        android:src="@drawable/ic_account_circle" />


</LinearLayout>
